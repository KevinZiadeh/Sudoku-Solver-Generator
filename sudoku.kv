#:kivy 1.0.9

<SudokuGame>:
  canvas:
    Rectangle:
      pos: self.center_x - 5, 0
      size: 10, self.height


<Select>:
  BoxLayout:
    Button:
      id: play_button
      font_size: 30
      text: "Play"
      background_normal: ''
      background_color: (0.95,0.58,0.19,1)
      background_down: '#FFFFFF' #arbitrary value
      on_press:
        play_button.background_color= (0.665,0.406,0.133,1)
        root.manager.transition.direction = 'left'
        root.manager.current = 'game'
      on_release: play_button.background_color= (0.95,0.58,0.19,1)

    Button:
      id: solve_button
      font_size: 30
      text: "Solve"
      background_normal: ''
      background_color: (0.19,0.58,0.95,1)
      background_down: '#FFFFFF' #arbitrary value
      on_press:
        solve_button.background_color= (0.133,0.406,0.665,1)
        root.manager.transition.direction = 'right'
        root.manager.current = 'solve'
      on_release: solve_button.background_color= (0.19,0.58,0.95,1)
